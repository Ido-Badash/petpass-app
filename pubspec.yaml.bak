name: petpass
description: "A new Flutter project."
publish_to: 'none'
version: 1.0.0+1

environment:
  sdk: ^3.8.1

# Dependencies
dependencies:
  flutter:
    sdk: flutter

  # icons
  cupertino_icons: ^1.0.8
  
  # widgets
  flutter_glow: ^0.3.2
  smooth_page_indicator: ^1.2.1

  # animations
  scanning_effect: ^1.0.11
  floating_animation: ^1.0.9

  # text
  google_fonts: ^6.3.0

  # firebase
  firebase_core: ^4.0.0
  cloud_firestore: ^6.0.0

# Dev dependencies
dev_dependencies:
  flutter_test:
    sdk: flutter
  flutter_lints: ^5.0.0

  # rules
  lint: ^2.8.0

# Flutter
flutter:
  uses-material-design: true
  assets:
    - assets/images/
